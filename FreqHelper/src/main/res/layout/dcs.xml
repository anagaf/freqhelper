<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              a:layout_width="match_parent"
              a:layout_height="match_parent"
              a:orientation="vertical"
              tools:context="com.anagaf.freqhelper.MainActivity">

    <!-- Focus thief -->
    <View
        a:layout_width="1dp"
        a:layout_height="1dp"
        a:focusable="true"
        a:focusableInTouchMode="true"/>

    <!-- Content -->
    <ScrollView
        a:layout_width="match_parent"
        a:layout_height="match_parent">

        <LinearLayout
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:orientation="vertical"
            a:layout_gravity="center"
            a:layout_margin="@dimen/gap"
            >

            <TextView
                style="@style/FreqTitle"
                a:text="@string/dcs_code"/>

            <TableLayout
                a:layout_width="match_parent"
                a:layout_height="wrap_content"
                a:layout_marginBottom="@dimen/gap"
                a:orientation="horizontal">

                <TableRow>

                    <TextView
                        style="@style/FreqTitle"
                        a:layout_weight="1"
                        a:layout_marginRight="@dimen/gap"
                        a:text="@string/dcs_direct"/>

                    <TextView
                        style="@style/FreqTitle"
                        a:layout_weight="1"
                        a:text="@string/dcs_inverse"/>

                </TableRow>

                <TableRow>
                    <com.anagaf.freqhelper.FrequencyComponentEdit
                        a:id="@+id/dcs_direct_code_edit"
                        style="@style/FreqEdit"
                        a:layout_marginRight="@dimen/gap"
                        tools:text="433"/>

                    <com.anagaf.freqhelper.FrequencyComponentEdit
                        a:id="@+id/dcs_inverse_code_edit"
                        style="@style/FreqEdit"
                        tools:text="433"/>
                </TableRow>

            </TableLayout>

            <TableLayout
                a:id="@+id/ranges_layout"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

