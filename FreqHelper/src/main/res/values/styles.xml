<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="BaseItem">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BaseEdit" parent="BaseItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="FreqTitle" parent="BaseItem">
        <item name="android:background">@color/frequency_item_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
        <item name="android:padding">@dimen/gap</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FreqEdit" parent="BaseEdit">
        <item name="android:background">@color/frequency_item_background</item>
        <item name="android:textColorHighlight">@color/frequency_item_highlight</item>
        <item name="android:padding">@dimen/gap</item>
    </style>

    <style name="RangeTitle" parent="BaseItem">
        <item name="android:background">@color/range_item_background</item>
        <item name="android:padding">@dimen/gap</item>
        <item name="android:layout_marginRight">@dimen/gap</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
    </style>

    <style name="ChannelButton" parent="BaseItem">
        <item name="android:padding">@dimen/gap</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
        <item name="android:background">@drawable/range_item_background</item>
    </style>

    <style name="ChannelButtonPrev" parent="ChannelButton">
        <item name="android:layout_marginRight">@dimen/gap</item>
        <item name="android:text">&lt;</item>
    </style>

    <style name="ChannelButtonNext" parent="ChannelButton">
        <item name="android:text">&gt;</item>
    </style>

    <style name="ChannelEdit" parent="BaseEdit">
        <item name="android:background">@color/range_item_background</item>
        <item name="android:textColorHighlight">@color/range_item_highlight</item>
        <item name="android:padding">@dimen/gap</item>
        <item name="android:layout_marginRight">@dimen/gap</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
        <item name="android:maxLength">2</item>
    </style>

</resources>
