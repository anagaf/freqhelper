<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="BaseItem">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="FreqItem" parent="BaseItem">
        <item name="android:background">#3399FF</item>
    </style>

    <style name="FreqTitle" parent="FreqItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FreqEdit" parent="FreqItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="RangeItem" parent="BaseItem">
        <item name="android:background">#00994C</item>
    </style>

    <style name="RangeTitle" parent="RangeItem">
        <item name="android:padding">@dimen/gap</item>
        <item name="android:layout_marginRight">@dimen/gap</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
    </style>

    <style name="ChannelButton" parent="RangeItem">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/gap</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
    </style>

    <style name="ChannelButtonPrev" parent="ChannelButton">
        <item name="android:layout_marginRight">@dimen/gap</item>
        <item name="android:text">&lt;</item>
    </style>

    <style name="ChannelButtonNext" parent="ChannelButton">
        <item name="android:text">&gt;</item>
    </style>

    <style name="ChannelEdit" parent="RangeItem">
        <item name="android:padding">@dimen/gap</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/gap</item>
        <item name="android:layout_marginBottom">@dimen/gap</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">HNT</item>
    </style>

</resources>
