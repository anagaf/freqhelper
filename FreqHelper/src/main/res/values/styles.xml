<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Item">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ItemTitle" parent="Item">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ItemContent" parent="Item">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
    </style>

    <style name="ItemDetails" parent="Item">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Frequency to Channel -->

    <style name="FrequencyRangeTitle" parent="ItemTitle">
        <item name="android:paddingTop">@dimen/content_item_large_gap</item>
    </style>

    <style name="FrequencyRangeChannel" parent="Item">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="FrequencyRangeEnclosingChannel" parent="Item">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

</resources>
